{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "types": [],
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "composite": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "clibu": ["packages/clibu/src"],
      "@clibu/core": ["packages/core/src"],
      "@clibu/help": ["packages/help/src"],
      "@clibu/loader": ["packages/loader/src"]
    }
  }
}
