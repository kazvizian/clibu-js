{
  "name": "@clibu/core",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Declarative CLI engine core for KazVizian Clibu. Provides a compact, type-aware schema for defining commands and options, a deterministic two-phase parser, and validation/runtime primitives.",
  "homepage": "https://github.com/kazvizian/clibu",
  "author": {
    "name": "KazViz",
    "email": "kaz@kazviz.com",
    "url": "https://kazviz.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kazvizian/clibu.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/kazvizian/clibu/issues"
  },
  "scripts": {
    "build": "packlet build --sourcemap none",
    "clean": "rm -rf dist .tsbuildinfo",
    "test": "bun test"
  },
  "keywords": [
    "kazviz",
    "kazvizian",
    "clibu",
    "cli",
    "core"
  ],
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "engines": {
    "bun": ">=1.2.0",
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "packlet": {
    "gpr": true,
    "gprName": "clibu-core"
  },
  "sideEffects": false
}
